---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { XCircle, Home, Ticket } from "lucide-react";
import { Button } from "@/components/ui/button";
const { transactionId, paymentMethod, statusMessage } = Astro.props;
---

<div class="bg-background flex flex-col">
  <main class="flex-grow container mx-auto px-4 py-8">
    <div class="max-w-xl mx-auto">
      <Card>
        <CardHeader className="text-center border-b pb-6">
          <div
            class="mx-auto bg-red-100 w-20 h-20 flex items-center justify-center rounded-full mb-4"
          >
            <XCircle className="h-10 w-10 text-red-600" />
          </div>
          <CardTitle className="text-2xl text-gray-800">
            Pago cancelado
          </CardTitle>
          <p
            class="text-red-800 text-lg font-semibold p-6 bg-red-50 p-2 rounded-md border border-red-100"
          >
            {statusMessage}
          </p>
          <CardDescription className="text-base">
            Tu transacción ha sido cancelada o no se completó correctamente
          </CardDescription>
        </CardHeader>

        <CardContent className="pt-6 space-y-4 gap-2">
          <div class="flex flex-row gap-2">
            <div class="w-1/2">
              <p>Metodo de pago:</p>
              <p class="text-red-800 text-sm">
                {paymentMethod}
              </p>
            </div>
            <div class="w-1/2">
              <p>Referencia de pago:</p>
              <p class="text-red-800 text-sm">
                {transactionId}
              </p>
            </div>
          </div>
          <div class="bg-red-50 p-4 rounded-md border border-red-100">
            <p class="text-red-800 text-sm">
              No te preocupes, no se ha realizado ningún cargo a tu cuenta. Si
              deseas intentarlo nuevamente, puedes volver a la página de
              boletos.
            </p>
          </div>
        </CardContent>

        <CardFooter
          className="flex flex-col sm:flex-row gap-3 pt-2 w-full justify-center"
        >
          <a class="w-full" href="/tickets"
            ><Button variant="outline" className="w-full">
              <Ticket className="mr-2 h-4 w-4" />
              Volver a boletos
            </Button>
          </a>
          <a class="w-full" href="/">
            <Button className=" w-full bg-heart-500 hover:bg-heart-600">
              <Home className="mr-2 h-4 w-4" />
              Ir al inicio
            </Button>
          </a>
        </CardFooter>
      </Card>
    </div>
  </main>
</div>
